<div class="col-xxl-3 col-lg-4 col-md-6" data-catalog-item>
    <div class="vr6-product-card">
        <div class="feature-image position-relative">
            {% if product.special %}
                <span class="offer-badge">Special</span>
            {% endif %}
            {% if product.discount %}
                <span class="offer-badge">&dash;{{ product.discount }}</span>
            {% endif %}

            <a href="/{{ parameter('catalog_address', 'catalog') }}/{{ product.address }}">
                {% include 'mixin/img.twig' with {
                    'src': product.hasFiles() ? product.getFiles().first().getPublicPath('middle') : 'https://via.placeholder.com/335x335',
                    'title': product.title,
                    'alt': product.title,
                    'class': 'feature-thumbnail',
                    'style': 'height: 228px;width: 227px;object-fit: contain;'
                } only %}
            </a>
        </div>
        <div class="vr6-product-card-content">
            <span>{{ categories.firstWhere('uuid', product.category).title }}</span>
            <a href="/{{ parameter('catalog_address', 'catalog') }}/{{ product.address }}"><h6 class="fw-semibold">{{ product.title }}</h6></a>
            <div class="pricing">
                <span>${{ catalog_product_show_price(product) }}</span>
            </div>
        </div>
    </div>
</div>
