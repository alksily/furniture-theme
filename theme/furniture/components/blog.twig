<!-- Start Blog Section Area -->
<section class="blog-section ptb-140 vr6-blog-section">
    <div class="container">
        <div class="row">
            <div class="col-xl-4">
                <div class="section-title">
                    <h2 class="mb-60">Our Journal</h2>
                </div>
            </div>
        </div>
        <div class="row justify-content-center g-4">
            {% for item in publication({}, [], 3) %}
                <!-- Start Single Blog -->
                <div class="col-lg-4 col-md-6 col-12">
                    <article class="blog-card wow fadeInUp" style="visibility: visible; animation-name: fadeInUp;">
                        <div class="feature-image overflow-hidden">
                            <a href="/{{ item.address }}">
                                {% include 'mixin/img.twig' with {
                                    'src': item.hasFiles() ? item.getFiles().first().getPublicPath('middle') : 'https://via.placeholder.com/300x215',
                                    'placeholder': item.hasFiles() ? item.getFiles().first().getPublicPath('small') : '',
                                    'title': item.title,
                                    'alt': item.title,
                                    'class': 'img-fluid',
                                } only %}
                            </a>
                        </div>
                        <div class="blog-meta mt-30 mb-30 d-flex align-items-center gap-30">
                            <span class="fw-medium"><i class="fa-regular fa-user me-2"></i>{{ item.user.getName('short') }}</span>
                            <span class="fw-medium"><i class="fa-regular fa-calendar me-2"></i>{{ item.date|df }} |</span>
                        </div>
                        <a href="/{{ item.address }}" class="blog-title">
                            <h5 class="mb-40 fw-semibold">{{ item.title }}</h5>
                        </a>
                        <a href="/{{ item.address }}" class="explore-btn">Read Details</a>
                    </article>
                </div>
                <!-- End Single Blog -->
            {% endfor %}
        </div>
    </div>
</section>
<!-- End Blog Section Area -->
