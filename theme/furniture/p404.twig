{% extends 'main.twig' %}

{% block bodyinner %}
    <!-- Start Error Area -->
    <section class="notfound-area">
        <div class="container">
            <div class="row">
                <div class="col-xl-5 col-lg-6 align-self-center">
                    <div class="notfound-content">
                        <h1>404 ERROR</h1>
                        <p class="mb-40 fs-18">The page requested couldn't be found. This could be a spelling error in the URL or a removed page.</p>
                        <a href="/" class="template-btn outline-btn">Back To Homepage</a>
                    </div>
                </div>
                <div class="col-xl-7 col-lg-6">
                    <div class="img-wrapper mt-4 mt-lg-0">
                        <img src="/resource/img/sofa.png" alt="not found" class="img-fluid">
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- End Error Area -->
{% endblock %}
