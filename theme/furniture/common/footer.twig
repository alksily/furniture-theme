<!-- Start Footer Area -->
<footer class="footer-style-2 pt-140 overflow-hidden footer-mobile-accordion">
    <div class="container-1240">
        <div class="row">
            <div class="col-xl-3 col-sm-6">
                <div class="hm2-footer-widget">
                    <h5 class="mb-40 fw-medium text-capitalize">Showroom &amp; Store</h5>
                    <div class="footer-address">
                        {% for store in reference('store_location') %}
                            <div class="mb-3">
                                <h3>{{ store.title }}</h3>
                                {% if store.value.contact.phone %}
                                    <p class="phone">Phone:
                                        <a href="tel:{{ store.value.contact.phone }}">
                                            {{ store.value.contact.phone }}
                                        </a>
                                    </p>
                                {% endif %}
                                <p>{{ store.value.address }}</p>
                                <p>{{ store.value.times|replace({'\n': '<br>'})|raw }}</p>
                                {% if store.value.contact.email %}
                                    <p class="mail">
                                        <a href="mailto:{{ store.value.contact.email }}">{{ store.value.contact.email }}</a>
                                    </p>
                                {% endif %}
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
            <div class="col-xl-2 offset-xl-1 col-sm-6">
                <div class="footer-widget footer-nav-widget">
                    <h5 class="widget-title mb-40 fw-medium text-capitalize">Follow Us On</h5>
                    <ul class="footer-links">
                        {% for title, data in reference('social_network', true) %}
                            <li><a href="{{ title.url }}"><i class="fa-brands fa-square-{{ title|lower }} fa-{{ title|lower }}"></i> {{ title }}</a></li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
            <div class="col-xl-2 offset-xl-1 col-sm-6">
                <div class="footer-widget footer-nav-widget">
                    <h5 class="widget-title mb-40 fw-medium text-capitalize">Customer</h5>
                    <ul class="footer-links">
                        <li><a href="#">Help &amp; Contact Us</a></li>
                        <li><a href="#">Return &amp; Refunds</a></li>
                        <li><a href="#">Delivery Information</a></li>
                        <li><a href="#">Terms &amp; Conditions</a></li>
                    </ul>
                </div>
            </div>
            <div class="col-xl-2 offset-xl-1 col-sm-6">
                <div class="footer-widget footer-nav-widget">
                    <h5 class="widget-title mb-40 fw-medium text-capitalize">Profile</h5>
                    <ul class="footer-links">
                        <li><a href="#">My Account</a></li>
                        <li><a href="#">Checkout</a></li>
                        <li><a href="#">Help &amp; Support</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="hm2-footer-copyright">
            <div class="row align-items-center g-3">
                <div class="col-lg-6">
                    <p class="mb-0 fs-sm">
                        Work by
                        <a href="https://getwebspace.org" rel="nofollow" target="_blank">WebSpace Engine</a>
                        <br/>
                        Designed in
                        <a href="https://themeforest.net/user/mate_themes" rel="nofollow" target="_blank">Venturi</a>
                    </p>
                </div>
                <div class="col-xl-6">
                    <p class="mb-0 fs-sm">We use cookies to give you the best experience on our website. <a href="#" class="text-main-color text-decoration-underline">Cookie settings</a></p>
                </div>
            </div>
        </div>
    </div>
</footer>
<!--/ End Footer Area -->
