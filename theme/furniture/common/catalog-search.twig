<div class="sidebar-widget search-widget">
    <form action="/search">
        {% include 'mixin/form.twig' with {
            'type': 'hidden',
            'name': 't',
            'args': {
                'value': 'catalog_product',
            }
        } %}
        {% include 'mixin/form.twig' with {
            'type': 'text',
            'name': 'q',
            'args': {
                'class': 'theme-input fw-light',
                'required': true,
                'value': _request.q,
                'placeholder': 'Search Here...',
            }
        } %}
    </form>
</div>
