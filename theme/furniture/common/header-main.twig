                                        <sub class="cart-item" data-catalog-cart-count>0</sub>
                                    </span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="vr6-header-navbar position-relative">
        <div class="container">
            <div class="vr6-header-custom-row align-items-center">
                <div class="vr6-category-menu">
                    <a href="#" class="d-none d-xl-inline-block">All Department</a>
                    <button class="vr6-category-dropdown d-xl-none">Categories</button>

                    {% set categories = catalog_category() %}
                    <ul>
                        {% for node in categories.where('parent_uuid', '=', parent ?? null).sortBy('order') %}
                            {% if categories.where('parent_uuid', '=', node.uuid).count() %}
                                <li class="has-megamenu">
                                    <a href="#">{{ node.title }}<i class="fas fa-angle-right"></i></a>
                                    <div class="vr6-category-menu-box">
                                        {% for chunk in categories.where('parent_uuid', '=', node.uuid).chunk(2) %}
                                            <div class="menu-box-top d-flex">
                                                {% for item in chunk %}
                                                    <div class="{{ loop.index0 == 0 ? 'menu-box-top-left' : 'menu-box-top-right' }}">
                                                        <h6>{{ item.title }}</h6>
                                                        <ul class="menu-list">
                                                            {% if categories.where('parent_uuid', '=', item.uuid).count() %}
                                                                {% for el in categories.where('parent_uuid', '=', item.uuid) %}
                                                                    <li><a href="/{{ parameter('catalog_address', 'catalog') }}/{{ el.address }}">{{ el.title }}</a></li>
                                                                {% endfor %}
                                                            {% else %}
                                                                <li><a href="/{{ parameter('catalog_address', 'catalog') }}/{{ item.address }}">All products</a></li>
                                                            {% endif %}
                                                        </ul>
                                                    </div>
                                                {% endfor %}
                                            </div>
                                        {% endfor %}

                                        {% if node.hasFiles() %}
                                            <div class="menu-list-banner position-relative mt-40">
                                                <img src="{{ node.getFiles().first().getPublicPath('middle') }}" alt="banner" class="img-fluid">
                                            </div>
                                        {% endif %}
                                    </div>
                                </li>
                            {% else %}
                                <li><a href="/{{ parameter('catalog_address', 'catalog') }}/{{ node.address }}">{{ node.title }}</a></li>
                            {% endif %}
                        {% endfor %}
                    </ul>
                </div>

                <nav class="vr6-nav-menu d-none d-xl-block header-navigation">
                    <ul>
                        <li><a href="/">Home</a></li>
                        <li><a href="/blog">Blog</a></li>
                        <li><a href="/delivery">Delivery</a></li>
                        <li><a href="/quiz">Quiz</a></li>
                        <li><a href="/contacts">Contact</a></li>
                    </ul>
                </nav>

                <div class="vr6-header-timing d-flex align-items-center justify-content-end gap-3">
                    <p class="mb-0 fs-sm text-main-color text-end">MON-FRI: 10:00 - 18:00</p>
                    <div class="heaader-toggle">
                        <button class="header-toggle-btn mobile-menu-toggle d-xl-none">
                            <span></span>
                            <span></span>
                            <span></span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>
<!-- End Header Area -->
