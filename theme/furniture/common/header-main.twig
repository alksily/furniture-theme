<!-- Start Header Area -->
<header class="header-section sticky-header">
    <div class="header-infobar d-none d-md-block">
        <div class="container-1700">
            <div class="row justify-content-between align-items-center">
                <div class="col-lg-6 col-md-5">
                    {{ parameter('var_phone', '+1 (900) 00 000 0000') }}
                </div>

                <div class="col-lg-6 col-md-5">
                    <div class="d-flex align-items-center justify-content-end gap-60">
                        {% include 'common/user-switch.twig' %}
                        <div class="header-socials d-flex align-items-center justify-content-end gap-4">
                            <a href="{{ parameter('var_soc_facebook', '#') }}" target="_blank"><i class="fa-brands fa-square-facebook"></i></a>
                            <a href="{{ parameter('var_soc_instagram', '#') }}" target="_blank"><i class="fa-brands fa-square-twitter"></i></a>
                            <a href="{{ parameter('var_soc_twitter', '#') }}" target="_blank"><i class="fa-brands fa-square-instagram"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="vr6-header-middle">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-xl-2 col-lg-3 col-6">
                    <a href="/" class="logo">Furniture</a>
                </div>

                <div class="col-xl-7 col-lg-6 d-none d-lg-block">
                    {% include 'common/header-search.twig' %}
                </div>

                <div class="col-xl-3 col-lg-3 col-6">
                    <div class="vr6-header-middle-right text-end">
                        <div class="header-icons d-inline-flex align-items-center gap-prt-16 gap-32">
                            <div class="header-cart">
                                <a href="/cart">
                                    <span class="cart-icon">
                                        <svg width="21" height="21" viewBox="0 0 21 21" fill="none" xmlns="http://www.w3.org/2000/svg">
                                            <path d="M18.7188 14V2H20.7188V0H17.7188C17.4535 0 17.1992 0.105357 17.0116 0.292893C16.8241 0.48043 16.7188 0.734784 16.7188 1V13H4.28075L2.28075 5H14.7188V3H0.998751C0.846745 3 0.696739 3.03466 0.560137 3.10134C0.423535 3.16801 0.303931 3.26495 0.210415 3.38479C0.116899 3.50462 0.0519333 3.6442 0.0204544 3.79291C-0.0110245 3.94162 -0.00818793 4.09555 0.0287495 4.243L2.52875 14.243C2.58292 14.4592 2.7078 14.6512 2.88354 14.7883C3.05929 14.9255 3.27582 15 3.49875 15H17.7188C17.984 15 18.2383 14.8946 18.4259 14.7071C18.6134 14.5196 18.7188 14.2652 18.7188 14V14ZM16.7188 21C17.2492 21 17.7579 20.7893 18.133 20.4142C18.508 20.0391 18.7188 19.5304 18.7188 19C18.7188 18.4696 18.508 17.9609 18.133 17.5858C17.7579 17.2107 17.2492 17 16.7188 17C16.1883 17 15.6796 17.2107 15.3045 17.5858C14.9295 17.9609 14.7188 18.4696 14.7188 19C14.7188 19.5304 14.9295 20.0391 15.3045 20.4142C15.6796 20.7893 16.1883 21 16.7188 21ZM4.71875 21C5.24918 21 5.75789 20.7893 6.13296 20.4142C6.50804 20.0391 6.71875 19.5304 6.71875 19C6.71875 18.4696 6.50804 17.9609 6.13296 17.5858C5.75789 17.2107 5.24918 17 4.71875 17C4.18832 17 3.67961 17.2107 3.30454 17.5858C2.92946 17.9609 2.71875 18.4696 2.71875 19C2.71875 19.5304 2.92946 20.0391 3.30454 20.4142C3.67961 20.7893 4.18832 21 4.71875 21Z" fill="#121111"></path>
